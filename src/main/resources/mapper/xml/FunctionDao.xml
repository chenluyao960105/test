<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aaa.test.dao.FunctionDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.aaa.test.entity.Function">
        <id column="function_id" property="functionId" />
        <result column="function_name" property="functionName" />
        <result column="father_id" property="fatherId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        function_id AS functionId, function_name AS functionName, father_id AS fatherId
    </sql>

</mapper>
